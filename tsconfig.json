{
    "compilerOptions": {
        "jsx": "react",
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@components/*": ["./src/components/*"],
            "@model/*": ["./lib/types/*"],
            "@utils/*": ["./lib/utils/*"],
        },
    },
    "include": ["src/**/*", "lib/**/*"],
}
